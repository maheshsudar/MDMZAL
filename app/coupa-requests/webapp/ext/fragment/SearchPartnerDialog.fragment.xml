<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:fb="sap.ui.comp.filterbar" xmlns:table="sap.ui.table">
    <Dialog id="searchPartnerDialog" title="Search SAP Business Partner" contentWidth="80%" contentHeight="80%" resizable="true" draggable="true">
        <content>
            <fb:FilterBar id="filterBar" search=".onSearchPartner" useToolbar="false" showGoOnFB="true">
                <fb:filterGroupItems>
                    <fb:FilterGroupItem groupName="G1" name="PartnerName" label="Partner Name" visibleInFilterBar="true">
                        <fb:control>
                            <Input id="searchPartnerName" placeholder="e.g. Acme*" />
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem groupName="G1" name="SapBpNumber" label="SAP BP Number" visibleInFilterBar="true">
                        <fb:control>
                            <Input id="searchSapBpNumber" placeholder="e.g. 0000100001" />
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem groupName="G1" name="VatId" label="VAT ID" visibleInFilterBar="true">
                        <fb:control>
                            <Input id="searchVatId" placeholder="e.g. DE123456789" />
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem groupName="G1" name="SatelliteSystemId" label="Satellite System ID" visibleInFilterBar="true">
                        <fb:control>
                            <Input id="searchSatelliteSystemId" />
                        </fb:control>
                    </fb:FilterGroupItem>
                </fb:filterGroupItems>
            </fb:FilterBar>
            <Table id="partnerResultsTable" items="{searchResults>/results}" mode="SingleSelectLeft" growing="true" growingThreshold="10">
                <columns>
                    <Column width="8rem">
                        <Text text="SAP BP Number" />
                    </Column>
                    <Column>
                        <Text text="Partner Name" />
                    </Column>
                    <Column width="4rem">
                        <Text text="Ctry" />
                    </Column>
                    <Column width="9rem">
                        <Text text="VAT ID" />
                    </Column>
                    <Column width="6rem">
                        <Text text="Status" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{searchResults>sapBpNumber}" />
                            <Text text="{searchResults>partnerName}" />
                            <Text text="{searchResults>country}" />
                            <Text text="{searchResults>vatId}" />
                            <ObjectStatus text="{searchResults>status}" state="{= ${searchResults>isBlocked} ? 'Error' : 'Success' }" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <buttons>
            <Button id="btnDialogAction" text="Start Change Request" type="Emphasized" press=".onDialogAction" />
            <Button text="Cancel" press=".onCancelSearch" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
