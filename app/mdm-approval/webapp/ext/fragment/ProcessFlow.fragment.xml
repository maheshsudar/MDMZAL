<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:pf="sap.suite.ui.commons">
    <VBox class="sapUiSmallMargin">
        <pf:ProcessFlow
            id="processFlow"
            scrollable="false"
            nodes="{processFlow>/nodes}"
            lanes="{processFlow>/lanes}">
            <pf:nodes>
                <pf:ProcessFlowNode
                    laneId="{processFlow>laneId}"
                    nodeId="{processFlow>id}"
                    title="{processFlow>title}"
                    children="{processFlow>children}"
                    state="{processFlow>state}"
                    stateText="{processFlow>stateText}"
                    focused="{processFlow>focused}" />
            </pf:nodes>
            <pf:lanes>
                <pf:ProcessFlowLaneHeader
                    laneId="{processFlow>laneId}"
                    iconSrc="{processFlow>iconSrc}"
                    text="{processFlow>text}"
                    position="{processFlow>position}" />
            </pf:lanes>
        </pf:ProcessFlow>
    </VBox>
</core:FragmentDefinition>
