<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <HBox alignItems="Center" class="sapUiTinyMarginEnd">
        <items>
            <Label text="{i18n>language}" class="sapUiTinyMarginEnd"/>
            <Select
                id="languageSwitcher"
                selectedKey="{app>/currentLanguage}"
                width="120px"
                change=".onLanguageChange"
                tooltip="{i18n>languageSwitcherTooltip}">
                <items>
                    <core:Item key="en" text="English" icon="sap-icon://globe"/>
                    <core:Item key="de" text="Deutsch" icon="sap-icon://globe"/>
                </items>
            </Select>
        </items>
    </HBox>
</core:FragmentDefinition>
