<mvc:View
    controllerName="com.company.adminconfig.controller.GenericList"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table"
    displayBlock="true"
    height="100%">
    <Page
        id="genericListPage"
        title="{viewModel>/title}"
        showNavButton="true"
        navButtonPress="onNavBack">
        <content>
            <table:Table
                id="genericTable"
                visibleRowCountMode="Auto"
                selectionMode="MultiToggle"
                enableColumnReordering="true"
                rowMode="Auto">
                <table:extension>
                    <OverflowToolbar>
                        <ToolbarSpacer/>
                        <Button
                            text="Create"
                            icon="sap-icon://add"
                            press="onCreate"/>
                        <Button
                            text="Change"
                            icon="sap-icon://edit"
                            press="onChange"
                            enabled="{= ${viewModel>/selectedRowCount} === 1}"/>
                        <Button
                            text="Delete"
                            icon="sap-icon://delete"
                            press="onDelete"
                            enabled="{= ${viewModel>/selectedRowCount} > 0}"/>
                        <Button
                            text="Refresh"
                            icon="sap-icon://refresh"
                            press="onRefresh"/>
                    </OverflowToolbar>
                </table:extension>
            </table:Table>
        </content>
    </Page>
</mvc:View>
