                <StandardListItem
                    title="Business Channels"
                    description="Configure business channels"
                    type="Navigation"
                    press="onNavigateToEntity">
                    <customData>
                        <core:CustomData key="entity" value="BusinessChannels"/>
                    </customData>
                </StandardListItem>
            </List>

            <List
                headerText="System Configuration"
                mode="None">
                <StandardListItem
                    title="System Configuration"
                    description="System-wide settings"
                    type="Navigation"
                    press="onNavigateToEntity">
                    <customData>
                        <core:CustomData key="entity" value="SystemConfiguration"/>
                    </customData>
                </StandardListItem>
                <StandardListItem
                    title="Status Transitions"
                    description="Configure status workflow"
                    type="Navigation"
                    press="onNavigateToEntity">
                    <customData>
                        <core:CustomData key="entity" value="StatusTransitions"/>
                    </customData>
                </StandardListItem>
                <StandardListItem
                    title="User Roles"
                    description="Configure user roles"
                    type="Navigation"
                    press="onNavigateToEntity">
                    <customData>
                        <core:CustomData key="entity" value="UserRoles"/>
                    </customData>
                </StandardListItem>
                <StandardListItem
                    title="Workflow Steps"
                    description="Configure workflow steps"
                    type="Navigation"
                    press="onNavigateToEntity">
                    <customData>
                        <core:CustomData key="entity" value="WorkflowSteps"/>
                    </customData>
                </StandardListItem>
                <StandardListItem
                    title="Status App Config"
                    description="Configure status app settings"
                    type="Navigation"
                    press="onNavigateToEntity">
                    <customData>
                        <core:CustomData key="entity" value="StatusAppConfig"/>
                    </customData>
                </StandardListItem>
            </List>
        </content>
    </Page>
</mvc:View>
