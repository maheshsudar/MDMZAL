<mvc:View
    controllerName="com.company.adminconfig.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    height="100%">
    <Page
        title="Admin Configuration"
        showHeader="true">
        <content>
            <List
                headerText="Validation Management"
                mode="None">
                <StandardListItem
                    title="Validation Rules"
                    description="Field-level validation"
                    type="Navigation"
                    press="onNavigateToEntity">
                    <customData>
                        <core:CustomData key="entity" value="ValidationRules"/>
                    </customData>
                </StandardListItem>
                <StandardListItem
                    title="Section Validation"
                    description="Table-level validation"
                    type="Navigation"
                    press="onNavigateToEntity">
                    <customData>
                        <core:CustomData key="entity" value="SectionValidationRules"/>
                    </customData>
                </StandardListItem>
                <StandardListItem
                    title="Custom Validators"
                    description="Custom validation logic"
                    type="Navigation"
                    press="onNavigateToEntity">
                    <customData>
                        <core:CustomData key="entity" value="CustomValidators"/>
                    </customData>
                </StandardListItem>
            </List>

            <List
                headerText="Code Lists - Business Configuration"
                mode="None">
                <StandardListItem
                    title="Payment Terms"
                    description="Configure payment terms"
                    type="Navigation"
                    press="onNavigateToEntity">
                    <customData>
                        <core:CustomData key="entity" value="PaymentTerms"/>
                    </customData>
                </StandardListItem>
                <StandardListItem
                    title="Payment Methods"
                    description="Configure payment methods"
                    type="Navigation"
                    press="onNavigateToEntity">
                    <customData>
                        <core:CustomData key="entity" value="PaymentMethods"/>
                    </customData>
                </StandardListItem>
                <StandardListItem
                    title="Source Systems"
                    description="Configure source systems"
                    type="Navigation"
                    press="onNavigateToEntity">
                    <customData>
                        <core:CustomData key="entity" value="SourceSystems"/>
                    </customData>
                </StandardListItem>
                <StandardListItem
                    title="Overall Statuses"
                    description="Configure request statuses"
                    type="Navigation"
                    press="onNavigateToEntity">
                    <customData>
                        <core:CustomData key="entity" value="OverallStatuses"/>
                    </customData>
                </StandardListItem>
                <StandardListItem
                    title="Request Types"
                    description="Configure request types"
                    type="Navigation"
                    press="onNavigateToEntity">
                    <customData>
                        <core:CustomData key="entity" value="RequestTypes"/>
                    </customData>
                </StandardListItem>
            </List>

            <List
                headerText="Code Lists - Partner Data"
                mode="None">
                <StandardListItem
                    title="Address Types"
                    description="Configure address types"
                    type="Navigation"
                    press="onNavigateToEntity">
                    <customData>
                        <core:CustomData key="entity" value="AddressTypes"/>
                    </customData>
                </StandardListItem>
                <StandardListItem
                    title="Email Types"
                    description="Configure email types"
                    type="Navigation"
                    press="onNavigateToEntity">
                    <customData>
                        <core:CustomData key="entity" value="EmailTypes"/>
                    </customData>
                </StandardListItem>
                <StandardListItem
                    title="VAT Types"
                    description="Configure VAT types"
                    type="Navigation"
                    press="onNavigateToEntity">
                    <customData>
                        <core:CustomData key="entity" value="VatTypes"/>
                    </customData>
                </StandardListItem>
                <StandardListItem
                    title="BP Types"
                    description="Configure BP types"
                    type="Navigation"
                    press="onNavigateToEntity">
                    <customData>
                        <core:CustomData key="entity" value="BPTypes"/>
                    </customData>
                </StandardListItem>
                <StandardListItem
                    title="Contact Types"
                    description="Configure contact types"
                    type="Navigation"
                    press="onNavigateToEntity">
                    <customData>
                        <core:CustomData key="entity" value="ContactTypes"/>
                    </customData>
                </StandardListItem>
                <StandardListItem
                    title="Document Types"
                    description="Configure document types"
                    type="Navigation"
                    press="onNavigateToEntity">
                    <customData>
                        <core:CustomData key="entity" value="DocumentTypes"/>
                    </customData>
                </StandardListItem>
                <StandardListItem
                    title="Dunning Strategies"
                    description="Configure dunning strategies"
                    type="Navigation"
                    press="onNavigateToEntity">
                    <customData>
                        <core:CustomData key="entity" value="DunningStrategies"/>
                    </customData>
                </StandardListItem>
                <StandardListItem
                    title="Vendor Classifications"
                    description="Configure vendor classifications"
                    type="Navigation"
                    press="onNavigateToEntity">
                    <customData>
                        <core:CustomData key="entity" value="VendorClassifications"/>
                    </customData>
                </StandardListItem>
            </List>

            <List
                headerText="Code Lists - Salesforce Specific"
                mode="None">
                <StandardListItem
                    title="Revenue Streams"
                    description="Configure revenue streams"
                    type="Navigation"
                    press="onNavigateToEntity">
                    <customData>
                        <core:CustomData key="entity" value="RevenueStreams"/>
                    </customData>
                </StandardListItem>
                <StandardListItem
                    title="Billing Cycles"
                    description="Configure billing cycles"
                    type="Navigation"
                    press="onNavigateToEntity">
                    <customData>
                        <core:CustomData key="entity" value="BillingCycles"/>
